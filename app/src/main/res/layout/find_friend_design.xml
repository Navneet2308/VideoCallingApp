<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="20dp"
    android:orientation="vertical"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="15dp"
 >


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/cardview"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_notification"
            android:layout_width="280dp"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile_image"
            ></ImageView>


        <EditText
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:id="@+id/name_notification"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_below="@id/image_notification"></EditText>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="79dp"
            android:visibility="gone"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:text="Aceept Friend Request"
            android:background="@color/colorPrimary"
            android:layout_marginRight="79dp"
            android:layout_below="@id/name_notification"
            android:id="@+id/request_accept_btn"></Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="79dp"
            android:visibility="gone"
            android:padding="5dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:text="Cancel Friend Request"
            android:background="@color/btncolor"
            android:layout_marginRight="79dp"
            android:layout_below="@id/request_accept_btn"
            android:id="@+id/request_decline_btn"></Button>

    </RelativeLayout>

</androidx.cardview.widget.CardView>