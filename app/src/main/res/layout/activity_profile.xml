<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/profile_image"
        android:scaleType="centerCrop"
        android:id="@+id/background_profile_view"></ImageView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:id="@+id/name_profile"
        android:textColor="@color/colorPrimary"
        android:textSize="28dp"
        android:maxLines="2"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textStyle="bold"></TextView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_firend"
        android:textSize="16dp"
        android:padding="5dp"
        android:textAllCaps="false"
        android:text="Add Firend"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="35dp"
        android:layout_below="@id/name_profile"
        android:textColor="@color/white"></Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descline_firend"
        android:textSize="16dp"
        android:padding="5dp"
        android:visibility="gone"
        android:textAllCaps="false"
        android:text="Cancel Firend Request"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/add_firend"
        android:textColor="@color/white"></Button>

</RelativeLayout>